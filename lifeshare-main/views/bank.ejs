  <!-- Filter Modal -->

  <div id="search" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" role="content">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">FILTER</h4>
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
        </div>
        <div class="modal-body bg-gradient-danger text-white">
          <form action="/bank" class="white-text" autocomplete="off">
            <div class="form-group row">
              <label class="white-text col-form-label col-md-2" for="blood">Blood Group</label>

              <div class="col-md-10">
                <select name="blood" id="blood" class="form-control validate">
                  <option value="">Any</option>
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="O">O</option>
                  <option value="AB">AB</option>
                </select>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-2 col-form-label white-text" for="rh">RH Factor</label>
              <p class="col-10 white-text">
                <label class="offset-md-3">
                  <input class="with-gap white-text white form-control" value="+" name="rh" id="rh" type="radio" />
                  <span class="white-text">Positive</span>
                </label>
                <label class="offset-md-3">
                  <input class="with-gap white-text white form-control" value="-" name="rh" id="rh" type="radio" />
                  <span class="white-text">Negetive</span>
                </label>
              </p>
            </div>

            <div class="form-group row">
              <label for="city" class="col-md-2 col-form-label white-text">District</label>
              <div class="col-md-10">
                <input type="text" name="city" placeholder="District" id="city"
                  class="form-control validate white-text" />
              </div>
            </div>

            <div class="form-group row">
              <div class="offset-md-2 col-md-10">
                <button class="btn btn-success form-control" type="submit">
                  FILTER
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
